<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sanelee.bigevent.mapper.UserMapper">

    <resultMap type="com.sanelee.bigevent.pojo.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="userPic" column="user_pic" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="findByUserName" resultMap="UserMap">
        select * from user where username=#{username}
    </select>

    <!--新增所有列-->
    <insert id="add" >
        insert into user(username, password, create_time, update_time) values (#{username},#{md5String},now(),now())
    </insert>



    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="updateTime != null">
                update_time = now(),
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="updateAvatar">
        update user
        <set>
            <if test="avatarUrl != null ">
                user_pic = #{avatarUrl},
            </if>
                update_time = now(),
        </set>
        where id = #{id}
    </update>
    <update id="updatePwd">
        update user
        <set>
            <if test="md5String != null and md5String != ''">
                password = #{md5String},
            </if>
                update_time = now(),
        </set>
        where id = #{id}
    </update>

</mapper>

